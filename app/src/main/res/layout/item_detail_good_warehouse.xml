<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/lnData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvRevenueTitle"
                style="@style/Font.TextRegular13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/big_stone"
                tools:text="Máy điều hòa siêu lanh" />

            <TextView
                android:id="@+id/tvQuantityBegin"
                style="@style/Font.TextRegular13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/big_stone"
                tools:text="30000" />

            <TextView
                android:id="@+id/tvQuantityEnd"
                style="@style/Font.TextRegular13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/big_stone"
                tools:text="5000" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sp_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lnData" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
