<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameRevenue"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivTypeRevenue"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_up_menu"
                tools:tint="@color/black_effective" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvRevenueTitle"
            style="@style/Font.TextRegular13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/frameRevenue"
            android:textColor="@color/big_stone"
            tools:text="Tiền hàng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvRevenueTitle"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnRevenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:gravity="end"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivUp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_up" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivUp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_down" />

                <TextView
                    android:id="@+id/tvCollected"
                    style="@style/Font.TextLight13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:textColor="@color/clr_desc"
                    android:textSize="13sp"
                    tools:text="25%" />

                <TextView
                    android:id="@+id/tvMoneyRevenue"
                    style="@style/Font.TextRegular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/big_stone"
                    android:visibility="visible"
                    tools:text="98767809999"
                    tools:visibility="visible" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>